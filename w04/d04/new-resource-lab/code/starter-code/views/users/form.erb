<form action="/users/<%= @user[:id] %>" method="POST">
  <div>
    <label>Email: </label>
    <input type="text" name="email" placeholder="Enter an email" value="<%= @user[:email] %>">
  </div>

  <div>
    <label>First Name: </label>
    <input type="text" name="first" placeholder="Enter a first name" value="<%= @user[:first_name] %>">
  </div> 

  <div>
    <label>Surname: </label>
    <input type="text" name="surname" placeholder="Enter a surname" value="<%= @user[:last_name] %>">
  </div>

  <div>
    <label>Age: </label>
    <input type="number" name="age" placeholder="Enter your age" value = '<%= @user[:age] %>'>
  </div>

  <div>
    <input type="submit" value="Save user">
  </div>
  <% if(@user[:id] != "") %>
    <input type="hidden" name="_method" value="PUT">
  <% end %>
</form>